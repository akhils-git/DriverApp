<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">

    <!-- Background Image (login_screen_background.svg) -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="Login Background" />

    <!-- Logo (login_screen_logo.svg) -->
    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:layout_marginStart="115dp"
        android:layout_marginEnd="115dp"
        android:contentDescription="Girfalco Logo" />

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Welcome Back"
        android:textSize="28sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/welcome_text_color" />

    <TextView
        android:id="@+id/subtitle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Let's Collect, Clean, and Conquer the Day!"
        android:textSize="14dp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/subtitle_text_color" />

    <!-- Login Form Container -->
    <LinearLayout
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subtitle_text"
        android:layout_marginTop="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:orientation="vertical">

        <!-- Email Input with Custom Floating Label -->
        <FrameLayout
            android:layout_width="335dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_input_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:boxBackgroundMode="outline"
                app:boxBackgroundColor="@color/input_background_color"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="1.5dp"
                app:boxStrokeColor="@color/input_border_unfocused"
                app:hintTextColor="@color/placeholder_text_color"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                app:expandedHintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textEmailAddress"
                    android:textSize="16dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#2F3F46"
                    android:textColorHint="@color/placeholder_text_color"
                    android:hint="Email Address"
                    android:textAlignment="textStart"
                    android:gravity="start|center_vertical"
                    android:paddingTop="30dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Custom Floating Label -->
            <TextView
                android:id="@+id/email_floating_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Email Address"
                android:textSize="12dp"
                android:textColor="@color/placeholder_text_color"
                android:fontFamily="sans-serif"
                android:visibility="gone" />

        </FrameLayout>

        <!-- Password Input with Custom Floating Label -->
        <FrameLayout
            android:layout_width="335dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_input_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:boxBackgroundMode="outline"
                app:boxBackgroundColor="@color/input_background_color"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="1.5dp"
                app:boxStrokeColor="@color/input_border_unfocused"
                app:hintTextColor="@color/placeholder_text_color"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                app:expandedHintEnabled="false"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/input_border_focused">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:textSize="16dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#2F3F46"
                    android:textColorHint="@color/placeholder_text_color"
                    android:hint="Password"
                    android:textAlignment="textStart"
                    android:gravity="start|center_vertical"
                    android:paddingTop="30dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Custom Floating Label -->
            <TextView
                android:id="@+id/password_floating_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Password"
                android:textSize="12dp"
                android:textColor="@color/placeholder_text_color"
                android:fontFamily="sans-serif"
                android:visibility="gone" />

        </FrameLayout>

        <!-- Remember Me and Forgot Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/remember_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember Me"
                android:textColor="@color/remember_me_color"
                android:textSize="15dp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:button="@drawable/custom_checkbox"
                android:paddingStart="4dp"
                android:checked="true" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:textColor="@color/forgot_password_color"
                android:textSize="15dp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textAlignment="center"
                android:gravity="center" />

        </LinearLayout>

        <!-- Login Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/login_button"
            android:layout_width="335dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Login"
            android:textSize="15dp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:backgroundTint="#4880FB"
            app:cornerRadius="12dp"
            android:layout_marginBottom="24dp" />

        <!-- Face ID Login Container -->
        <RelativeLayout
            android:id="@+id/face_id_container"
            android:layout_width="228dp"
            android:layout_height="58dp"
            android:layout_marginStart="74dp"
            android:layout_marginEnd="74dp"
            android:background="@drawable/face_id_button_background"
            android:layout_marginBottom="60dp"
            android:clickable="true"
            android:focusable="true">
            
            <!-- Face ID Icon -->
            <ImageView
                android:id="@+id/face_id_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:contentDescription="Face ID Icon" />
            
            <!-- Face ID Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/face_id_icon"
                android:layout_marginStart="12dp"
                android:text="Login with Face ID"
                android:textSize="15dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#FFFFFF" />
                
        </RelativeLayout>

    </LinearLayout>

    <!-- Footer -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Girfalco Â© 2025 All Rights Reserved."
        android:textSize="14dp"
        android:textColor="#91989F" />

</RelativeLayout>