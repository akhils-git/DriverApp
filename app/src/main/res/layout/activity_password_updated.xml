<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">

    <!-- Back Button (placed after background so it's visible) -->
    <ImageView
        android:id="@+id/password_updated_back_button"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="34dp"
        android:src="@drawable/forgotscreen_back_button"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        android:contentDescription="Back"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:elevation="8dp" />

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="Password Updated Background" />

    <!-- Logo (login_screen_logo.svg) -->
    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:layout_marginStart="115dp"
        android:layout_marginEnd="115dp"
        android:contentDescription="Girfalco Logo" />

    <!-- Password Updated Successfully Text -->
    <TextView
        android:id="@+id/success_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Password Updated Successfully"
        android:textSize="28sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/welcome_text_color" />

    <TextView
        android:id="@+id/success_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/success_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Your password has been updated successfully. You can now log in with your new password."
        android:textSize="14dp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/subtitle_text_color" />

    <!-- Go to Login Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/go_to_login_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="92dp"
        android:layout_alignParentBottom="true"
        android:text="Go to Login"
        android:textSize="15dp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:backgroundTint="#4880FB"
        app:cornerRadius="12dp" />

</RelativeLayout>