<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/current_location_details"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:orientation="vertical"
    android:background="@drawable/current_location_details_bg"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/current_location_image"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/current_location_history"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:contentDescription="Current Location History" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/location_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Riyadh Central - Industrial Zones"
                android:textColor="#2F3F46"
                android:textSize="15dp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:typeface="sans"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/location_bins_stops"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Bins and Stops: 38"
                android:textColor="#54676F"
                android:textSize="13dp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/current_location_rect"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/current_location_details_rect" />

</LinearLayout>
