<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/route_history_current_location"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/current_location_image"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/current_location_history"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="Current Location History" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/location_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Riyadh Central - Industrial Zones"
                android:textColor="#2F3F46"
                android:textSize="15dp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:typeface="sans"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/location_bins_stops"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Bins and Stops: 38"
                android:textColor="#54676F"
                android:textSize="13dp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/l_shape_image"
            android:layout_width="26dp"
            android:layout_height="19dp"
            android:src="@drawable/home_screen_l_shape"
            android:scaleType="fitCenter"
            android:layout_marginLeft="31dp"
            android:layout_marginBottom="18.99dp"
            android:tint="#91989F"
            android:contentDescription="L Shape" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <View
                android:layout_width="267dp"
                android:layout_height="34dp"
                android:background="@drawable/gray_rounded_rect"
                android:layout_gravity="bottom" />
            <TextView
                android:id="@+id/plate_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1837 RXB"
                android:textColor="#22201F"
                android:textSize="13dp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:typeface="normal"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="bottom|left" />
            <View
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:layout_gravity="bottom|left"
                android:layout_marginLeft="80dp"
                android:layout_marginBottom="10dp"
                android:background="#91989F" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plate Number: "
                android:textColor="#22201F"
                android:textSize="13dp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:typeface="normal"
                android:layout_marginLeft="88dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="bottom|left" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BXR 6754"
                android:textColor="#2F3F46"
                android:textSize="13dp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:typeface="normal"
                android:layout_marginLeft="178dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="bottom|left" />
        </FrameLayout>

    </LinearLayout>

    <FrameLayout
    android:id="@+id/current_location_rect"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/current_location_yellow_rect"
        android:alpha="0.05" />        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <!-- Left: Bin Info (35%) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="17"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/current_location_bin_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/current_location_card_grey_bin"
                    android:contentDescription="Bin Icon" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="4dp">
                    <TextView
                        android:id="@+id/current_location_bin_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="124"
                        android:textColor="#2F3F46"
                        android:textSize="15dp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:layout_marginTop="11dp" />
                    <TextView
                        android:id="@+id/current_location_bin_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Bins"
                        android:textColor="#54676F"
                        android:textSize="13dp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:typeface="sans"
                        android:layout_marginBottom="11dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Center Left: Vertical Line 1 -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center">
                <View
                    android:layout_width="1dp"
                    android:layout_height="29dp"
                    android:layout_gravity="center"
                    android:background="#91989F" />
            </FrameLayout>

            <!-- Center: Bin Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="14"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                        android:orientation="vertical"
                    android:layout_marginLeft="10dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/current_location_bin_count_center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="120"
                                android:textColor="#2F3F46"
                                android:textSize="15dp"
                                android:fontFamily="sans-serif"
                                android:textStyle="bold"
                                android:typeface="sans"
                                android:layout_marginTop="11dp" />
                            <ImageView
                                android:id="@+id/current_location_bin_tick_center"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="14dp"
                                android:src="@drawable/route_history_card_gary_tick"
                                android:contentDescription="Bin Tick Center" />
                        </LinearLayout>
                    <TextView
                        android:id="@+id/current_location_bin_label_center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Bins"
                        android:textColor="#54676F"
                        android:textSize="13dp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:typeface="sans"
                        android:layout_marginBottom="11dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Center Right: Vertical Line 2 -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center">
                <View
                    android:layout_width="1dp"
                    android:layout_height="29dp"
                    android:layout_gravity="center"
                    android:background="#91989F" />
            </FrameLayout>

            <!-- Right: Bin Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="14"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                        android:orientation="vertical"
                    android:layout_marginLeft="10dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/current_location_bin_count_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#2F3F46"
                                android:textSize="15dp"
                                android:fontFamily="sans-serif"
                                android:textStyle="bold"
                                android:typeface="sans"
                                android:layout_marginTop="11dp" />
                            <ImageView
                                android:id="@+id/current_location_bin_tick_right"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="14dp"
                                android:src="@drawable/route_history_card_gary_untik"
                                android:contentDescription="Bin Untick Right" />
                        </LinearLayout>
                    <TextView
                        android:id="@+id/current_location_bin_label_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Bins"
                        android:textColor="#54676F"
                        android:textSize="13dp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:typeface="sans"
                        android:layout_marginBottom="11dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    
    <FrameLayout
        android:id="@+id/repeat_frequency_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/current_location_details_rect"
            android:alpha="0.05" />
        <!-- Right-aligned gradient rectangle -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="29dp"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/current_location_repeat_rect">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Delayed"
                    android:textColor="#F4945E"
                    android:textSize="14dp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold" />
            </FrameLayout>
        </FrameLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/repeat_frequency_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Started &amp; End Time"
                android:textColor="#2F3F46"
                android:textSize="13dp"
                android:fontFamily="sans-serif"
                android:typeface="normal" />
            <TextView
                android:id="@+id/scheduled_time_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 AM - 12:38 PM"
                android:textColor="#22201F"
                android:textSize="13sp"
                android:fontFamily="sans-serif-medium"
                android:typeface="normal"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </FrameLayout>

    <!-- New container with only two TextViews -->
    <FrameLayout
        android:id="@+id/scheduled_time_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/scheduled_gradient_bg"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/scheduled_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scheduled Date &amp; Time:"
                android:textColor="#2F3F46"
                android:textSize="13dp"
                android:fontFamily="sans-serif"
                android:typeface="normal" />
            <TextView
                android:id="@+id/scheduled_date_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06/04/2023, 10:00 AM - 12:38 PM"
                android:textColor="#2F3F46"
                android:textSize="13dp"
                android:fontFamily="sans-serif-medium"
                android:typeface="normal"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </FrameLayout>

    <!-- Button Container below Repeat Frequency Container -->
        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
        <LinearLayout
            android:id="@+id/view_details_button_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/button_gradient_bg"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/view_details_button_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="View Details"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:fontFamily="sans-serif-medium"
                android:typeface="normal"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="4dp"
                android:includeFontPadding="false"
                android:letterSpacing="0"
                android:drawablePadding="4dp"
                android:backgroundTintMode="src_in"
                android:backgroundTint="@null"
                android:radius="12dp" />
            <ImageView
                android:id="@+id/view_details_button_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/home_screen_double_arrow"
                android:contentDescription="Double Arrow"
                android:layout_marginLeft="4dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>