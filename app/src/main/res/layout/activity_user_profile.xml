<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <!-- Top Segment -->
    <RelativeLayout
        android:id="@+id/profile_top_segment"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="#FFFFFF">
        <ImageView
            android:id="@+id/user_profile_back_arrow"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/user_profile_back_arrow"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="34dp" />
        <TextView
            android:id="@+id/profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="16dp"
            android:textColor="#2F3F46"
            android:fontFamily="sans-serif-medium"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <!-- User Profile Image and Edit Segment -->
    <LinearLayout
        android:id="@+id/user_profile_image_edit_segment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/profile_top_segment"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal">

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="50dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/user_profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_avathar" />

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/user_profile_edit"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="-0dp"
                android:background="@drawable/edit_circle_bg"
                android:padding="7dp"
                android:src="@drawable/ic_edit_pen"
                android:contentDescription="Edit Profile" />

        </FrameLayout>

        <TextView
            android:id="@+id/user_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Mohammed Al Hassan"
            android:textColor="#2F3F46"
            android:fontFamily="sans-serif-medium"
            android:textSize="16dp"
            android:gravity="center" />

    </LinearLayout>

    <!-- User Actions Segment -->
    <LinearLayout
        android:id="@+id/user_actions_segment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/route_history_segment"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/change_password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Change Password"
            android:textColor="#4880FB"
            android:textSize="15dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/logout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="Logout"
            android:textColor="#D86764"
            android:textSize="15dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- User Details Segment -->
    <LinearLayout
        android:id="@+id/user_details_segment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_profile_image_edit_segment"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
    android:background="@drawable/bg_user_details_rounded_rect">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="16dp">
            <ImageView
                android:id="@+id/user_profile_mail_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/user_profile_mail"
                android:contentDescription="Mail Icon" />
            <TextView
                android:id="@+id/user_profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="driver@girfalcogpssolutions.com"
                android:textColor="#2F3F46"
                android:textSize="14dp"
                android:fontFamily="sans-serif"
                android:typeface="normal"
                android:gravity="center_vertical" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="16dp">
            <ImageView
                android:id="@+id/user_profile_phone_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/user_profile_screen_phone"
                android:contentDescription="Phone Icon" />
            <TextView
                android:id="@+id/user_profile_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Loading..."
                android:textColor="#2F3F46"
                android:textSize="14dp"
                android:fontFamily="sans-serif"
                android:typeface="normal"
                android:gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>

    <!-- Dotted Line Separator -->
    <View
        android:id="@+id/dotted_line_separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/user_details_segment"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/dotted_line_separator" />

    <!-- Route History Segment -->
    <LinearLayout
        android:id="@+id/route_history_segment"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/dotted_line_separator"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_route_history_rounded_rect"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingEnd="15dp">
        
        <ImageView
            android:id="@+id/route_history_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/user_profile_history"
            android:contentDescription="Route History Icon" />
        
        <TextView
            android:id="@+id/route_history_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Route History"
            android:textColor="#2F3F46"
            android:textSize="14dp"
            android:fontFamily="sans-serif-medium"
            android:typeface="normal" />
    </LinearLayout>


    <!-- Footer Segment -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="40dp">
        <include
            android:id="@+id/footer_copyright"
            layout="@layout/footer_copyright"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</RelativeLayout>
