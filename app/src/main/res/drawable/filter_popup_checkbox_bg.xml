<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <gradient android:type="linear" android:angle="45" android:startColor="#DBE6FF" android:endColor="#FFFFFF" />
            <corners android:radius="12dp" />
            <stroke android:width="1.5dp" android:color="#4880FB" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:type="linear" android:angle="45" android:startColor="#D1D4DC" android:endColor="#00FFFFFF" />
            <corners android:radius="12dp" />
            <stroke android:width="1.5dp" android:color="#D1D4DC" />
        </shape>
    </item>
</selector>
