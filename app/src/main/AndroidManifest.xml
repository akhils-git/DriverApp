<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@android:drawable/ic_menu_mylocation"
        android:label="@string/app_name"
        android:roundIcon="@android:drawable/ic_menu_mylocation"
        android:supportsRtl="true"
        android:theme="@style/Theme.GirfalcoDriverApp"
        tools:targetApi="31">
        <!-- Home Activity -->
        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.GirfalcoDriverApp.FullScreen" />
        <!-- Route Details Activity -->
        <activity
            android:name=".RouteDetailsActivity"
            android:exported="true"
            android:label="Route Details"
            android:theme="@style/Theme.GirfalcoDriverApp.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Splash Screen Activity as Launcher -->
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.GirfalcoDriverApp.FullScreen"
            android:screenOrientation="portrait" />
        
        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.GirfalcoDriverApp.FullScreen" />
        
        <!-- User Profile Activity -->
        <activity
            android:name=".UserProfileActivity"
            android:exported="true"
            android:label="User Profile"
            android:theme="@style/Theme.GirfalcoDriverApp.FullScreen" />
    </application>

</manifest>