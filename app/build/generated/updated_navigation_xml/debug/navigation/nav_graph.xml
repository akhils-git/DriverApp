<navigation
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/nav_graph"
app:startDestination="@id/loginFragment" >
<fragment
    android:id="@+id/loginFragment"
    android:name="com.girfalco.driverapp.LoginFragment"
    android:label="Login"
    tools:layout="@layout/fragment_login" >

    <action
        android:id="@+id/action_loginFragment_to_dashboardFragment"
        app:destination="@id/dashboardFragment"
        app:popUpTo="@id/loginFragment"
        app:popUpToInclusive="true" />

</fragment>
<fragment
    android:id="@+id/dashboardFragment"
    android:name="com.girfalco.driverapp.DashboardFragment"
    android:label="@string/first_fragment_label"
    tools:layout="@layout/fragment_dashboard" >

    <action
        android:id="@+id/action_dashboardFragment_to_routesFragment"
        app:destination="@id/routesFragment" />

</fragment>
<fragment
    android:id="@+id/routesFragment"
    android:name="com.girfalco.driverapp.RoutesFragment"
    android:label="@string/second_fragment_label"
    tools:layout="@layout/fragment_routes" >

    <action
        android:id="@+id/action_routesFragment_to_dashboardFragment"
        app:destination="@id/dashboardFragment" />

</fragment>
</navigation>