<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/abort_ride_confirm_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="163dp"
    android:orientation="vertical"
    android:background="@drawable/bg_logout_bottom_sheet"
    android:elevation="8dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp">

    <!-- Handle Bar -->
    <View
        android:id="@+id/handle_bar"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="168dp"
        android:layout_marginEnd="168dp"
        android:background="#E6E6E6"
        android:layout_gravity="center_horizontal" />

    <!-- Title -->
    <TextView
        android:id="@+id/abort_ride_confirm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abort Ride"
        android:textColor="#2F3F46"
        android:textSize="18dp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:gravity="start" />

    <!-- Confirmation Text -->
    <TextView
        android:id="@+id/abort_ride_confirm_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to abort this ride? This option cannot be undone."
        android:textColor="#54676F"
        android:textSize="14dp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:gravity="start" />

    <!-- Buttons Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp">
        <!-- Exit Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/exit_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_abort_ride_exit_button"
            android:text="Exit"
            android:textColor="#2F3F46"
            android:textSize="15dp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginEnd="5.5dp"
            android:textAllCaps="false"
            android:stateListAnimator="@null" />
        <!-- Abort Ride Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/abort_ride_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_abort_ride_confirm_button"
            android:text="Abort Ride"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="5.5dp"
            android:textAllCaps="false"
            android:stateListAnimator="@null" />
    </LinearLayout>

</LinearLayout>
