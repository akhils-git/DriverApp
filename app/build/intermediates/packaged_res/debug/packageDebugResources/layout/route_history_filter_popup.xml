<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/route_history_filter_popup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/popup_background_bottomsheet"
    android:elevation="8dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <!-- Handle Bar -->
    <View
        android:id="@+id/handle_bar"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="168dp"
        android:layout_marginEnd="168dp"
        android:background="#E6E6E6"
        android:layout_gravity="center_horizontal" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/popup_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter"
        android:textColor="#2F3F46"
        android:textSize="18dp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:gravity="start" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="35dp" />

    <!-- Filter Option: All -->
    <LinearLayout
        android:id="@+id/filter_option_all"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/filter_popup_checkbox_bg"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingEnd="15dp">
        <ImageView
            android:id="@+id/popup_action_checkbox_all"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/checkbox_unchecked"
            android:contentDescription="Popup Action Checkbox" />
        <TextView
            android:id="@+id/popup_action_text_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="All"
            android:textColor="#2F3F46"
            android:textSize="14dp"
            android:fontFamily="sans-serif-medium"
            android:typeface="normal" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <!-- Filter Option: Completed Routes -->
    <LinearLayout
        android:id="@+id/filter_option_completed"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/filter_popup_checkbox_bg"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingEnd="15dp">
        <ImageView
            android:id="@+id/popup_action_checkbox_completed"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/checkbox_unchecked"
            android:contentDescription="Popup Action Checkbox" />
        <TextView
            android:id="@+id/popup_action_text_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Completed Routes"
            android:textColor="#2F3F46"
            android:textSize="14dp"
            android:fontFamily="sans-serif-medium"
            android:typeface="normal" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <!-- Filter Option: Aborted Routes -->
    <LinearLayout
        android:id="@+id/filter_option_aborted"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/filter_popup_checkbox_bg"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingEnd="15dp">
        <ImageView
            android:id="@+id/popup_action_checkbox_aborted"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/checkbox_unchecked"
            android:contentDescription="Popup Action Checkbox" />
        <TextView
            android:id="@+id/popup_action_text_aborted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Aborted Routes"
            android:textColor="#2F3F46"
            android:textSize="14dp"
            android:fontFamily="sans-serif-medium"
            android:typeface="normal" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:id="@+id/apply_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/button_gradient_bg_selector"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/apply_button_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Apply"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:fontFamily="sans-serif-medium"
            android:typeface="normal"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:includeFontPadding="false"
            android:letterSpacing="0" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="35dp" />

</LinearLayout>