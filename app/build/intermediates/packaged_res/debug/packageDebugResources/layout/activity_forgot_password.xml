<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">



    <!-- Back Button (placed after background so it's visible) -->
    <ImageView
        android:id="@+id/forgot_back_button"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="34dp"
        android:src="@drawable/forgotscreen_back_button"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        android:contentDescription="Back"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:elevation="8dp" />
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="Forgot Password Background" />

    <!-- Logo (login_screen_logo.svg) -->
    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:layout_marginStart="115dp"
        android:layout_marginEnd="115dp"
        android:contentDescription="Girfalco Logo" />

    <!-- Forgot Password Text -->
    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Forgot Password?"
        android:textSize="28sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/welcome_text_color" />

    <TextView
        android:id="@+id/subtitle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Please enter your email ID, and we will send you a link to reset your password."
        android:textSize="14dp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/subtitle_text_color" />

    <!-- Forgot Password Form Container -->
    <LinearLayout
        android:id="@+id/forgot_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subtitle_text"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <!-- Email Input with Custom Floating Label (copied from login screen) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="24dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_input_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:boxBackgroundMode="outline"
                app:boxBackgroundColor="@color/input_background_color"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="1.5dp"
                app:boxStrokeColor="@color/input_border_unfocused"
                app:hintTextColor="@color/placeholder_text_color"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                app:expandedHintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textEmailAddress"
                    android:textSize="16dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#2F3F46"
                    android:textColorHint="@color/placeholder_text_color"
                    android:hint="Email Address"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:paddingTop="25dp"
                    android:paddingBottom="15dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Custom Floating Label -->
            <TextView
                android:id="@+id/email_floating_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Email Address"
                android:textSize="12dp"
                android:textColor="@color/placeholder_text_color"
                android:fontFamily="sans-serif"
                android:visibility="gone" />

        </FrameLayout>

        <!-- Send Reset Link Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/send_reset_link_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Send Reset Link"
            android:textSize="15dp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:backgroundTint="#4880FB"
            app:cornerRadius="12dp"
            android:layout_marginBottom="92dp" />

    </LinearLayout>



</RelativeLayout>
