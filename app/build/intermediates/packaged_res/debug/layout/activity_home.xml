<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="1784dp"
    android:fitsSystemWindows="true"
    android:background="#FFFFFF">

    <!-- User Information Card (custom component) -->
    <com.girfalco.driverapp.ui.components.home_screen.HomeScreenUserInformationCard
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />


    <!-- Light Yellow Segment -->
    <RelativeLayout
    android:id="@+id/yellow_segment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/text_container"
    android:background="#F7F7F7"
    android:fitsSystemWindows="false">

        <!-- Vehicle Information Card (custom component) -->
    <com.girfalco.driverapp.ui.components.home_screen.VehicleInformationCard
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" />
    </RelativeLayout>


</RelativeLayout>