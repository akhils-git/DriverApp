<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="640dp"
    android:orientation="vertical"
    android:background="@drawable/bg_logout_bottom_sheet"
    android:paddingBottom="20dp">


    <!-- Handle Bar -->
    <View
        android:id="@+id/handle_bar"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="168dp"
        android:layout_marginEnd="168dp"
        android:background="#E6E6E6"
        android:layout_gravity="center_horizontal" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <TextView
        android:id="@+id/popup_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select vehicle"
        android:textColor="#22201F"
        android:textSize="16dp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp" />

    <!-- Search Box (copied from home page) -->
    <RelativeLayout
        android:id="@+id/select_vehicle_search_box_container"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/search_box_background">
        <EditText
            android:id="@+id/select_vehicle_search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/select_vehicle_search_icon"
            android:background="@android:color/transparent"
            android:hint="Search..."
            android:textSize="13dp"
            android:textColorHint="#54676F"
            android:fontFamily="sans-serif"
            android:paddingStart="16dp"
            android:paddingEnd="56dp"
            android:inputType="text"
            android:singleLine="true" />
        <ImageView
            android:id="@+id/select_vehicle_search_icon"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/home_screen_search"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp" />
    </RelativeLayout>

    <!-- Scrollable vehicle container -->
    <ScrollView
        android:id="@+id/selectvehcilecontner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="15dp"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/vehicle_information_checkbox" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
