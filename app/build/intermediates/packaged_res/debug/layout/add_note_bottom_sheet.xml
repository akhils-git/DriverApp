<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_note_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="197dp"
    android:orientation="vertical"
    android:background="@drawable/bg_logout_bottom_sheet"
    android:elevation="8dp">

    <!-- Handle Bar -->
    <View
        android:id="@+id/handle_bar"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="168dp"
        android:layout_marginEnd="168dp"
        android:background="#E6E6E6"
        android:layout_gravity="center_horizontal" />

    <!-- Title -->
    <TextView
        android:id="@+id/add_note_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Note"
        android:textColor="#2F3F46"
        android:textSize="18dp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:gravity="start" />

    <!-- Add Note Textbox -->
    <EditText
        android:id="@+id/add_note_textbox"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_add_note_textbox"
        android:hint="Add Collection notesâ€¦"
        android:textColorHint="#91989F"
        android:textColor="#2F3F46"
        android:textSize="13dp"
        android:fontFamily="sans-serif"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:inputType="textMultiLine"
        android:gravity="center_vertical|start" />

    <!-- (Optional) Add note input field or content here -->

    <!-- Buttons Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:paddingBottom="20dp">
        <!-- Cancel Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_cancel_button"
            android:text="Cancel"
            android:textColor="#2F3F46"
            android:textSize="15dp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginEnd="5.5dp" />
        <!-- Add Note Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_note_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_logout_button"
            android:text="Add Note"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="5.5dp" />
    </LinearLayout>

</LinearLayout>
