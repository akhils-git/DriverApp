<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.girfalco.driverapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="34" />

    <permission
        android:name="com.girfalco.driverapp.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.girfalco.driverapp.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@android:drawable/ic_menu_mylocation"
        android:label="@string/app_name"
        android:roundIcon="@android:drawable/ic_menu_mylocation"
        android:supportsRtl="true"
        android:theme="@style/Theme.GirfalcoDriverApp" >

        <!-- Home Activity -->
        <activity
            android:name="com.girfalco.driverapp.HomeActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.GirfalcoDriverApp.FullScreen" />
        <!-- Route Details Activity -->
        <activity
            android:name="com.girfalco.driverapp.RouteDetailsActivity"
            android:exported="true"
            android:label="Route Details"
            android:theme="@style/Theme.GirfalcoDriverApp.FullScreen"
            android:windowSoftInputMode="adjustResize" />
        <!-- Splash Screen Activity -->
        <activity
            android:name="com.girfalco.driverapp.SplashScreenActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.GirfalcoDriverApp.FullScreen" />

        <!-- Main Activity -->
        <activity
            android:name="com.girfalco.driverapp.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.GirfalcoDriverApp.FullScreen" />

        <!-- User Profile Activity as Launcher -->
        <activity
            android:name="com.girfalco.driverapp.UserProfileActivity"
            android:exported="true"
            android:label="User Profile"
            android:theme="@style/Theme.GirfalcoDriverApp.FullScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Forgot Password Activity -->
        <activity
            android:name="com.girfalco.driverapp.ForgotPasswordActivity"
            android:exported="true"
            android:label="Forgot Password"
            android:theme="@style/Theme.GirfalcoDriverApp.FullScreen" />

        <!-- Change Password Activity -->
        <activity
            android:name="com.girfalco.driverapp.ChangePasswordActivity"
            android:exported="true"
            android:label="Change Password"
            android:theme="@style/Theme.GirfalcoDriverApp.FullScreen" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.girfalco.driverapp.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.profileinstaller.ProfileInstallerInitializer"
                android:value="androidx.startup" />
        </provider>

        <uses-library
            android:name="androidx.window.extensions"
            android:required="false" />
        <uses-library
            android:name="androidx.window.sidecar"
            android:required="false" />

        <receiver
            android:name="androidx.profileinstaller.ProfileInstallReceiver"
            android:directBootAware="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.DUMP" >
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.INSTALL_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SKIP_FILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SAVE_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.BENCHMARK_OPERATION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>