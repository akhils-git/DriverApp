<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filter_check_box"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/filter_popup_checkbox_bg"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingEnd="15dp">


    <ImageView
        android:id="@+id/popup_action_checkbox"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/checkbox_checked"
        android:contentDescription="Popup Action Checkbox" />

    <TextView
        android:id="@+id/popup_action_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
    android:text="All"
        android:textColor="#2F3F46"
        android:textSize="14dp"
        android:fontFamily="sans-serif-medium"
        android:typeface="normal" />

</LinearLayout>
