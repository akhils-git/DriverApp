<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_bin_details_card"
    android:layout_width="match_parent"
    android:layout_height="184dp"
    android:orientation="horizontal"
    
    android:layout_marginTop="20dp"
    android:layout_marginEnd="21dp">

    <!-- 1st segment: 30% width, circle -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:background="@android:color/white">
        <View
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@drawable/tab_bin_details_circle"
            android:layout_gravity="center" />
    </FrameLayout>

    <!-- 2nd segment: 70% width, cyan background -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:background="@drawable/tab_bin_details_segment2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="start|top"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location:"
                android:textColor="#4E5567"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textSize="13dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ash Shafaq, Western Ring Road, Buraydah 52561, Saudi Arabia"
                android:textColor="#2F3F46"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textSize="13dp"
                android:layout_marginTop="4dp" />

            <!-- New container after address -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:orientation="vertical"
                android:background="@drawable/tab_bin_details_new_container_bg"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp">
                <!-- 1st: Bin details container -->
                <LinearLayout
                    android:id="@+id/bin_details_container"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/current_location_card_grey_bin"
                        android:contentDescription="Bin Icon"
                        android:layout_marginStart="10dp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="89%"
                            android:textColor="#D86764"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bin Filled"
                            android:textColor="#2F3F46"
                            android:textSize="13sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal" />
                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="21dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:background="#D9D9D9" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bin ID:"
                            android:textColor="#4F5567"
                            android:textSize="13sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal"
                            android:layout_marginTop="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GB00680"
                            android:textColor="#2F3F46"
                            android:textSize="13sp"
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="normal" />
                    </LinearLayout>
                </LinearLayout>
                <!-- 2nd: Add note switch container -->
                <LinearLayout
                    android:id="@+id/add_note_switch_container"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_add_blue_24"
                        android:tint="#4880FB"
                        android:contentDescription="Add Note"
                        android:layout_marginStart="10dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Note"
                        android:textColor="#4880FB"
                        android:textSize="13dp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="2dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>


