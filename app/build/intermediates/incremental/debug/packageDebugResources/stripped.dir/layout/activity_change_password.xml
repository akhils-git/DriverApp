<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">

    <!-- Back Button (same as forgot screen) -->
    <ImageView
        android:id="@+id/change_password_back_button"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="34dp"
        android:src="@drawable/forgotscreen_back_button"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        android:contentDescription="Back"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:elevation="8dp" />

    <!-- Background Image (same as forgot screen) -->
    <ImageView
        android:id="@+id/change_password_background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="Change Password Background" />

    <!-- Logo (same as forgot screen) -->
    <ImageView
        android:id="@+id/change_password_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:layout_marginStart="115dp"
        android:layout_marginEnd="115dp"
        android:contentDescription="Girfalco Logo" />

    <!-- Change Password Text -->
    <TextView
        android:id="@+id/change_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_password_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:text="Change Password"
        android:textSize="28sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/welcome_text_color" />

    <!-- Form Container -->
    <LinearLayout
        android:id="@+id/change_password_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_password_title"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <!-- Current Password -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="15dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/current_password_input_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:boxBackgroundMode="outline"
                app:boxBackgroundColor="@color/input_background_color"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="1.5dp"
                app:boxStrokeColor="@color/input_border_unfocused"
                app:hintTextColor="@color/placeholder_text_color"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                app:expandedHintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/current_password_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:textSize="16dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#2F3F46"
                    android:textColorHint="@color/placeholder_text_color"
                    android:hint="Current Password"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:paddingTop="25dp"
                    android:paddingBottom="15dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Custom Floating Label -->
            <TextView
                android:id="@+id/current_password_floating_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Current Password"
                android:textSize="12dp"
                android:textColor="@color/placeholder_text_color"
                android:fontFamily="sans-serif"
                android:visibility="gone" />

        </FrameLayout>

        <!-- New Password -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="15dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/new_password_input_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:boxBackgroundMode="outline"
                app:boxBackgroundColor="@color/input_background_color"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="1.5dp"
                app:boxStrokeColor="@color/input_border_unfocused"
                app:hintTextColor="@color/placeholder_text_color"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                app:expandedHintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/new_password_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:textSize="16dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#2F3F46"
                    android:textColorHint="@color/placeholder_text_color"
                    android:hint="New Password"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:paddingTop="25dp"
                    android:paddingBottom="15dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Custom Floating Label -->
            <TextView
                android:id="@+id/new_password_floating_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="New Password"
                android:textSize="12dp"
                android:textColor="@color/placeholder_text_color"
                android:fontFamily="sans-serif"
                android:visibility="gone" />

        </FrameLayout>

        <!-- Confirm New Password -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="30dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confirm_new_password_input_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:boxBackgroundMode="outline"
                app:boxBackgroundColor="@color/input_background_color"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="1.5dp"
                app:boxStrokeColor="@color/input_border_unfocused"
                app:hintTextColor="@color/placeholder_text_color"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                app:expandedHintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/confirm_new_password_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:textSize="16dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#2F3F46"
                    android:textColorHint="@color/placeholder_text_color"
                    android:hint="Confirm New Password"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:paddingTop="25dp"
                    android:paddingBottom="15dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Custom Floating Label -->
            <TextView
                android:id="@+id/confirm_new_password_floating_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Confirm New Password"
                android:textSize="12dp"
                android:textColor="@color/placeholder_text_color"
                android:fontFamily="sans-serif"
                android:visibility="gone" />

        </FrameLayout>

        <!-- Change Password Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/change_password_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Change Password"
            android:textSize="15dp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:backgroundTint="#4880FB"
            app:cornerRadius="12dp"
            android:layout_marginBottom="84dp" />

    </LinearLayout>

    <!-- Footer Copyright (copied from user profile) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="40dp">
        <include
            android:id="@+id/footer_copyright"
            layout="@layout/footer_copyright"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</RelativeLayout>
