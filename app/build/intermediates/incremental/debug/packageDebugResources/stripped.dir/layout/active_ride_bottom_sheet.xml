<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/active_ride_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="203dp"
    android:orientation="vertical"
    android:background="@drawable/bg_logout_bottom_sheet"
    android:elevation="8dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">



    <!-- Handle Bar -->
    <View
        android:id="@+id/handle_bar"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="168dp"
        android:layout_marginEnd="168dp"
        android:background="#E6E6E6"
        android:layout_gravity="center_horizontal" />

    <!-- Title -->
    <TextView
        android:id="@+id/active_ride_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active Ride"
        android:textColor="#2F3F46"
        android:textSize="18dp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="30dp"
        android:layout_marginStart="0dp"
        android:gravity="start" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />
    <!-- Ride Complete Button (below heading) -->
    <include
        layout="@layout/ride_complete_button" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <!-- Abort Ride Button (below ride_complete_button) -->
    <include
        layout="@layout/abort_ride_button" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

</LinearLayout>
