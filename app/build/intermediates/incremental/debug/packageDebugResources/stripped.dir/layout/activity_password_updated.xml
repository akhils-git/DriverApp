<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="Password Updated Background" />

    <!-- Logo (login_screen_logo.svg) -->
    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:layout_marginStart="115dp"
        android:layout_marginEnd="115dp"
        android:contentDescription="Girfalco Logo" />

    <!-- Password Success Image -->
    <ImageView
        android:id="@+id/password_success_image"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@id/login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:src="@drawable/password_sucess"
        android:contentDescription="Password Updated Success" />

    <!-- Password Updated Successfully Text -->
    <TextView
        android:id="@+id/success_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_success_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Password Updated Successfully"
        android:textSize="28sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/welcome_text_color" />

    <TextView
        android:id="@+id/success_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/success_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Please login with new password"
        android:textSize="14dp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/subtitle_text_color" />

    <!-- Go to Login Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/go_to_login_button"
        android:layout_width="121dp"
        android:layout_height="41dp"
        android:layout_below="@id/success_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Login Now"
        android:textSize="15dp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:backgroundTint="#4880FB"
        app:cornerRadius="12dp" />

</RelativeLayout>